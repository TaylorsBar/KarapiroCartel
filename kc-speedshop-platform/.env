# === GLOBAL ENVIRONMENT ===
NODE_ENV=development
PORT=3000

# === FRONTEND ===
VITE_API_URL=http://localhost:3000/api
VITE_SUPABASE_URL=https://placeholder-project.supabase.co
VITE_SUPABASE_ANON_KEY=placeholder-supabase-anon-key

# === BACKEND ===
# KC Speedshop Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://kc_user:kc_password@localhost:5432/kc_speedshop
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=kc-speedshop-super-secret-jwt-key-development-only-32-chars-minimum
JWT_REFRESH_SECRET=kc-speedshop-super-secret-refresh-key-development-only-32-chars

# Supabase Configuration
SUPABASE_URL=https://placeholder-project.supabase.co
SUPABASE_ANON_KEY=placeholder-supabase-anon-key
SUPABASE_SERVICE_KEY=placeholder-supabase-service-role-key

# External API Keys
RAPIDAPI_KEY=placeholder-rapidapi-key
XAI_API_KEY=placeholder-xai-api-key

# Hedera Blockchain Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=your-hedera-account-id
HEDERA_PRIVATE_KEY=your-hedera-private-key
HEDERA_DIAGNOSTIC_TOPIC_ID=your-diagnostic-topic-id
HEDERA_TRANSACTION_TOPIC_ID=your-transaction-topic-id
HEDERA_PARTS_AUTH_TOPIC_ID=your-parts-auth-topic-id

# RevenueCat Configuration
REVENUECAT_API_KEY=your-revenuecat-api-key

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_ML_DIAGNOSTICS=true
ENABLE_BLOCKCHAIN_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true
{
  "name": "kc-speedshop-platform",
  "version": "1.0.0",
  "description": "Unified KC Speedshop Automotive Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ml\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:ml": "cd ml/diagnostic-service && python app.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:ml",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:ml": "cd ml/diagnostic-service && pytest",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "deploy": "cd infrastructure && docker-compose up -d",
    "deploy:staging": "cd infrastructure && docker-compose -f docker-compose.staging.yml up -d",
    "deploy:prod": "cd infrastructure && docker-compose -f docker-compose.prod.yml up -d",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "security:scan": "npm audit && cd frontend && npm audit && cd ../backend && npm audit",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "blockchain:deploy": "cd blockchain && npm run deploy",
    "ml:train": "cd ml/diagnostic-service && python train_model.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "automotive",
    "blockchain",
    "hedera",
    "ml",
    "diagnostics",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "KC Speedshop Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KCSpeedshop/kc-speedshop-platform.git"
  },
  "bugs": {
    "url": "https://github.com/KCSpeedshop/kc-speedshop-platform/issues"
  },
  "homepage": "https://kcspeedshop.ai"
}
# === KC SPEEDSHOP PLATFORM ENVIRONMENT VARIABLES ===
# Copy this file to .env and fill in your actual values

# === GLOBAL ENV ===
NODE_ENV=development
PORT=3000

# === FRONTEND ===
VITE_API_URL=http://localhost:3000/api
VITE_SUPABASE_URL=https://your-supabase-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_REVENUECAT_API_KEY=your_revenuecat_api_key

# === BACKEND ===
DATABASE_URL=postgresql://user:password@localhost:5432/kc_speedshop
REDIS_URL=redis://localhost:6379
JWT_SECRET=super_secret_jwt_string_here
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
SUPABASE_SERVICE_KEY=your_supabase_admin_key
SUPABASE_URL=https://your-supabase-project.supabase.co

# === EXTERNAL API KEYS ===
RAPIDAPI_KEY=your-rapidapi-key
XAI_API_KEY=your-xai-api-key

# === DIAGNOSTIC ML SERVICE ===
ML_API_KEY=your_ml_api_key_here
MODEL_PATH=model/engine_fault_nn_model.h5
ML_SERVICE_URL=http://localhost:8000/predict

# === BLOCKCHAIN (Hedera) ===
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=your_hedera_account_id
HEDERA_OPERATOR_KEY=your_hedera_private_key
HEDERA_DIAGNOSTIC_TOPIC_ID=your-diagnostic-topic-id
HEDERA_TRANSACTION_TOPIC_ID=your-transaction-topic-id
HEDERA_PARTS_AUTH_TOPIC_ID=your-parts-auth-topic-id

# === INFRASTRUCTURE/DEPLOYMENT ===
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
EKS_CLUSTER_NAME=kc-speedshop-eks
S3_BUCKET=kc-speedshop-assets
DOMAIN=yourproduction.domain.dev

# === SECURITY & RATE LIMITING ===
CORS_ORIGIN=https://your-production-frontend.domain
RATE_LIMIT_AUTH=5
RATE_LIMIT_AUTH_WINDOW=15 # minutes
RATE_LIMIT_API=10
RATE_LIMIT_API_WINDOW=1   # minutes
RATE_LIMIT_DIAGNOSTIC=3
RATE_LIMIT_DIAGNOSTIC_WINDOW=5 # minutes

# === OBSERVABILITY ===
PROMETHEUS_PUSHGATEWAY=http://localhost:9091
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# === CI/CD ===
GITHUB_TOKEN=your_github_pat
ARGOCD_API_KEY=your_argocd_token_if_applicable

# === FEATURE FLAGS ===
FEATURE_BLOCKCHAIN_ESCROW=true
FEATURE_REALTIME_DIAGNOSTICS=true
FEATURE_ML_DIAGNOSTICS=true
FEATURE_BLOCKCHAIN_FEATURES=true
FEATURE_REAL_TIME_UPDATES=true

# === PAYMENT PROCESSING ===
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# === EMAIL & NOTIFICATIONS ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@kcspeedshop.com

# === FILE STORAGE ===
UPLOAD_MAX_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# === CACHE & SESSION ===
SESSION_SECRET=your-session-secret-key
CACHE_TTL=3600 # 1 hour in seconds
REDIS_PASSWORD=your-redis-password-if-any

# === MONITORING & ALERTS ===
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
HEALTH_CHECK_INTERVAL=30000 # 30 seconds in milliseconds

# Logging
LOG_FILE=/workspace/logs/business_os.log

# Domains
ENABLED_DOMAINS=DIAGNOSTICS,ECOMMERCE,CUSTOMER_SERVICE
SELF_IMPROVE=false
HUMAN_REVIEW_THRESHOLD=0.8
SCAN_INTERVAL=300

# Notifications
SLACK_WEBHOOK_URL=

# Connectors
DIAG_BASE_URL=
DIAG_API_KEY=
ECOMM_BASE_URL=
ECOMM_API_KEY=
CS_BASE_URL=
CS_API_KEY=
SUPPLY_BASE_URL=
SUPPLY_API_KEY=
INV_BASE_URL=
INV_API_KEY=
PERF_BASE_URL=
PERF_API_KEY=